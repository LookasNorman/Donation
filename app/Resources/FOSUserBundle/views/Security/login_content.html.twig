{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<section class="login-page">
    <h2>Zaloguj się</h2>
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}

        <div class="form-group">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                   autocomplete="username" placeholder="Email"/>
        </div>
        <div class="form-group">
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password"
                   placeholder="Hasło"/>
            <a href="{{ path('fos_user_resetting_request') }}"
               class="btn btn--small btn--without-border reset-password">Przypomnij hasło</a>
        </div>
        <div class="form-group">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
            <label for="remember_me" class="btn btn--small btn--without-border">{{ 'security.login.remember_me'|trans }}</label>
        </div>
        <a href="{{ hwi_oauth_login_url('google') }}">
            <img src="{{ asset('assets/icon/btn_google_signin_dark_normal_web.png') }}" />
        </a>

        <div class="form-group form-group--buttons">
            <a href="{{ path('fos_user_registration_register') }}" class="btn btn--without-border">Załóż konto</a>
            <button class="btn" type="submit">Zaloguj się</button>
        </div>
    </form>
</section>
