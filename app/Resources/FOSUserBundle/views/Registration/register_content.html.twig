{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form '@App/form/fields.html.twig' %}
<section class="login-page">
    <h2>Załóż konto</h2>

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {{ form_widget(form) }}
    <div class="form-group form-group--buttons">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <a href="{{ path('fos_user_security_logout') }}" class="btn btn--without-border">
                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
            </a>
        {% else %}
            <a href="{{ path('fos_user_security_login') }}" class="btn btn--without-border">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        {% endif %}
        <button class="btn" type="submit">Załóż konto</button>
    </div>
</section>
{{ form_end(form) }}
