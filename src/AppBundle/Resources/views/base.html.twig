<body>
<div id="wrapper">
    {% if is_granted('ROLE_ADMIN') %}
    {% include '@App/menu/admin-sidebar.html.twig' %}
    {% endif %}
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            {% block header %}
            {% endblock %}
            {% include '@App/home/header.html.twig' %}
