{% extends '@App/admin/base.html.twig' %}

{% block adminPage %}
    <h1>Giftstate</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ giftState.id }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ giftState.state }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('giftstate_index') }}">Back to the list</a>
