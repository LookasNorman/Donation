{% extends '@App/admin/base.html.twig' %}
{% block adminPage %}
    <h1>{% trans %}institution.show.title{% endtrans %}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{% trans %}institution.show.id{% endtrans %}</th>
            <td>{{ institution.id }}</td>
        </tr>
        <tr>
            <th>{% trans %}institution.show.name{% endtrans %}</th>
            <td>{{ institution.name }}</td>
        </tr>
        <tr>
            <th>{% trans %}institution.show.desc{% endtrans %}</th>
            <td>{{ institution.description }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('institution_index') }}">{% trans %}institution.show.button.back{% endtrans %}</a>
        </li>
        <li>
            <a href="{{ path('institution_edit', { 'id': institution.id }) }}">{% trans %}institution.show.button.edit{% endtrans %}</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="{% trans %}institution.show.button.delete{% endtrans %}" class="btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
