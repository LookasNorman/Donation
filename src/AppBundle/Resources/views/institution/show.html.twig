{% extends '@App/admin/base.html.twig' %}
{% block adminPage %}
    <h1>Institution</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ institution.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ institution.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ institution.description }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('institution_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('institution_edit', { 'id': institution.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
