{% extends '@App/base.html.twig' %}
{% block header %}
<header class="header">
    {% endblock %}

    {% block body %}
        <h1>Donations list</h1>

        <table class="table-striped table-bordered">
            <thead>
            <tr class="bg-info">
                <th scope="col">Id</th>
                <th scope="col">User</th>
                <th scope="col">Status</th>
                <th scope="col">Quantity</th>
                <th scope="col">Street</th>
                <th scope="col">City</th>
                <th scope="col">Zipcode</th>
                <th scope="col">Pickupdate</th>
                <th scope="col">Pickuptime</th>
                <th scope="col">Pickupcomment</th>
                <th scope="col">Phone</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for donation in donations %}
                <tr>
                    <td><a href="{{ path('donation_show', { 'id': donation.id }) }}">{{ donation.id }}</a></td>
                    <td>{{ donation.user }}</td>
                    <td>
                        {{donation.state.state}}
                    </td>
                    <td>{{ donation.quantity }}</td>
                    <td>{{ donation.street }}</td>
                    <td>{{ donation.city }}</td>
                    <td>{{ donation.zipCode }}</td>
                    <td>{% if (donation.pickUpDate) %}{{ donation.pickUpDate|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if donation.pickUpTime %}{{ donation.pickUpTime|date('H:i:s') }}{% endif %}</td>
                    <td>{{ donation.pickUpComment }}</td>
                    <td>{{ donation.phone }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('donation_show', { 'id': donation.id }) }}">show</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endblock %}
