{% extends '@App/base.html.twig' %}
{% block header %}
<header class="header">
    {% endblock %}

    {% block body %}
        <h1>Donation</h1>

        <table class="table-striped table-bordered">
            <tbody>
            <tr>
                <th scope="row">Id</th>
                <td>{{ donation.id }}</td>
            </tr>
            <tr>
                <th scope="row">Status</th>
                <td>
                    {{ render(controller('AppBundle:Donation:changeState', {'id': donation.id} )) }}
                </td>
            </tr>
            <tr>
                <th scope="row">Institution</th>
                <td>{{ donation.institution.name }}</td>
            </tr>
            <tr>
                <th scope="row">Created</th>
                <td>
                    {% if donation.createdDate %}
                        {{ donation.createdDate|date('Y-m-d') }}
                    {% endif %}
                    {% if donation.createdTime %}
                        {{ donation.createdTime|date('H:i:s') }}
                    {% endif %}
                </td>
            </tr>

            <tr>
                <th scope="row">Gifts</th>
                <td>
                    {% for gift in donation.categories %}
                        {{ gift.name }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th scope="row">Quantity</th>
                <td>{{ donation.quantity }}</td>
            </tr>
            <tr>
                <th scope="row">Pickupdate</th>
                <td>{% if donation.pickUpDate %}{{ donation.pickUpDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th scope="row">Pickuptime</th>
                <td>{% if donation.pickUpTime %}{{ donation.pickUpTime|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th scope="row">Pickupcomment</th>
                <td>{{ donation.pickUpComment }}</td>
            </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('donation_index') }}">Back to the list</a>
            </li>
        </ul>
    {% endblock %}
