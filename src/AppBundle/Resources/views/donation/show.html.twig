{% extends '@App/base.html.twig' %}
{% block header %}
<header class="header">
    {% endblock %}

    {% block body %}
        <h1>{% trans %}donation.show.title{% endtrans %}</h1>

        <table class="table-striped table-bordered">
            <tbody>
            <tr>
                <th scope="row">{% trans %}donation.show.id{% endtrans %}</th>
                <td>{{ donation.id }}</td>
            </tr>
            <tr>
                <th scope="row">{% trans %}donation.show.state{% endtrans %}</th>
                <td>
                    {{ render(controller('AppBundle:Donation:changeState', {'id': donation.id} )) }}
                </td>
            </tr>
            <tr>
                <th scope="row">{% trans %}donation.show.institution{% endtrans %}</th>
                <td>{{ donation.institution.name }}</td>
            </tr>
            <tr>
                <th scope="row">{% trans %}donation.show.created{% endtrans %}</th>
                <td>
                    {% if donation.createdDate %}
                        {{ donation.createdDate|date('Y-m-d') }}
                    {% endif %}
                    {% if donation.createdTime %}
                        {{ donation.createdTime|date('H:i:s') }}
                    {% endif %}
                </td>
            </tr>

            <tr>
                <th scope="row">{% trans %}donation.show.gifts{% endtrans %}</th>
                <td>
                    {% for gift in donation.categories %}
                        {{ gift.name }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th scope="row">{% trans %}donation.show.quantity{% endtrans %}</th>
                <td>{{ donation.quantity }}</td>
            </tr>
            <tr>
                <th scope="row">{% trans %}donation.show.date{% endtrans %}</th>
                <td>{% if donation.pickUpDate %}{{ donation.pickUpDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th scope="row">{% trans %}donation.show.time{% endtrans %}</th>
                <td>{% if donation.pickUpTime %}{{ donation.pickUpTime|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th scope="row">{% trans %}donation.show.comment{% endtrans %}</th>
                <td>{{ donation.pickUpComment }}</td>
            </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('donation_index') }}">{% trans %}donation.show.button.back{% endtrans %}</a>
            </li>
        </ul>
    {% endblock %}