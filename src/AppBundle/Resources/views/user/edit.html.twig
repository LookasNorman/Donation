{% extends '@App/admin/base.html.twig' %}
    {% block adminPage %}
        <h1>{% trans %}user.edit.title{% endtrans %}</h1>

        {{ form_start(edit_form) }}
        <div class="container">
            <div class="row">
                <div class="col-sm-2">
                    {{ form_label(edit_form.username) }}
                </div>
                <div class="col-sm">
                    {{ form_widget(edit_form.username) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    {{ form_label(edit_form.email) }}
                </div>
                <div class="col-sm">
                    {{ form_widget(edit_form.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    {{ form_label(edit_form.firstname) }}
                </div>
                <div class="col-sm">
                    {{ form_widget(edit_form.firstname) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    {{ form_label(edit_form.surname) }}
                </div>
                <div class="col-sm">
                    {{ form_widget(edit_form.surname) }}
                </div>
            </div>
            <input type="submit" value="{% trans %}user.edit.button.edit{% endtrans %}" class="btn-primary"/>
        </div>
        {{ form_end(edit_form) }}

        <ul>
            <li>
                <a href="{{ path('user_index') }}">{% trans %}user.edit.button.back{% endtrans %}</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="{% trans %}user.edit.button.delete{% endtrans %}" class="btn-danger">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    {% endblock %}
